# CenterPoint Connect API MCP Server Configuration
# Copy this file to .env and fill in your values

# REQUIRED: API token for CenterPoint Connect
CENTERPOINT_API_TOKEN=your_api_token_here

# Environment (development/staging/production)
NODE_ENV=development

# Logging configuration
CENTERPOINT_LOG_LEVEL=debug
CENTERPOINT_ENABLE_REQUEST_LOGGING=true
CENTERPOINT_ENABLE_TOKEN_MASKING=true
CENTERPOINT_LOG_FORMAT=text

# Performance configuration
CENTERPOINT_CACHE_ENABLED=false
CENTERPOINT_CACHE_TTL_MS=300000
CENTERPOINT_CACHE_MAX_SIZE=1000

# Request configuration
CENTERPOINT_REQUEST_TIMEOUT_MS=30000
CENTERPOINT_RETRY_ATTEMPTS=3
CENTERPOINT_RETRY_DELAY_MS=1000

# Rate limiting
CENTERPOINT_RATE_LIMIT_ENABLED=true
CENTERPOINT_RATE_LIMIT_MAX_ATTEMPTS=5
CENTERPOINT_RATE_LIMIT_WINDOW_MS=900000

# Server configuration
CENTERPOINT_SERVER_NAME=centerpoint-connect-api
CENTERPOINT_SERVER_VERSION=1.1.0
CENTERPOINT_BASE_URL=https://api.centerpointconnect.io/centerpoint
CENTERPOINT_USER_AGENT=CenterPoint-MCP-Server/1.1.0

# Optional: Custom metrics and monitoring
CENTERPOINT_ENABLE_METRICS=true

# Optional: Request batching (experimental)
CENTERPOINT_BATCHING_ENABLED=false
CENTERPOINT_BATCH_WINDOW_MS=100
CENTERPOINT_MAX_BATCH_SIZE=10