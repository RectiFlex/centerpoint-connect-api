{
  "name": "centerpoint-connect-api",
  "version": "1.1.0",
  "description": "MCP Server generated from OpenAPI spec for centerpoint-connect-api",
  "private": true,
  "type": "module",
  "main": "build/index.js",
  "module": "src/index.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "start": "node build/index.js",
    "build": "npx @smithery/cli build",
    "dev": "npx @smithery/cli dev",
    "build:local": "./node_modules/.bin/tsc && chmod 755 build/index.js",
    "typecheck": "tsc --noEmit",
    "prestart": "npm run build:local",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev-tools": "ts-node scripts/dev-tools.ts",
    "health-check": "npm run dev-tools health-check",
    "validate-config": "npm run dev-tools config-validate",
    "generate-docs": "npm run dev-tools config-docs && npm run dev-tools generate-examples",
    "lint-all": "npm run dev-tools lint-check && npm run typecheck && npm test",
    "dev": "NODE_ENV=development npm run build && npm start",
    "prod": "NODE_ENV=production npm run build && npm start",
    "docker:build": "docker build -t centerpoint-connect-api:1.1.0 .",
    "docker:run": "docker run -e CENTERPOINT_API_TOKEN=$CENTERPOINT_API_TOKEN centerpoint-connect-api:1.1.0",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up -d",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "smithery:deploy": "smithery deploy centerpoint-connect-api",
    "smithery:status": "smithery status centerpoint-connect-api"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "axios": "^1.8.4",
    "json-schema-to-zod": "^2.6.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
